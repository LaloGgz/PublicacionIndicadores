<!DOCTYPE html>
<html>
<head>
    <title>Gobierno Municipal de Monterrey</title>
    <link href="~/css/style2.css" rel="stylesheet" />
    <!-- Bootstrap -->
    <link href="~/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/vendors/animate.css/animate.min.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="~/build/css/custom.min.css" rel="stylesheet">
</head>
<body style=" font-family:  'Helvetica Neue' sans-serif;">


    <input type="hidden" id="Error" value="@ViewBag.Error" />

    <input type="hidden" id="Msj" value="@ViewBag.Msj" />

    <section class="background-radial-gradient overflow-hidden">
        <style>
            .background-radial-gradient {
                background-color: hsl(218, 41%, 15%);
                background-image: radial-gradient(650px circle at 0% 0%, hsl(218, 51%, 35%) 15%, hsl(218, 51%, 30%) 35%, hsl(218, 51%, 20%) 75%, hsl(218, 51%, 19%) 80%, transparent 100%), radial-gradient(1250px circle at 100% 100%, hsl(218, 41%, 45%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%);
            }



            .bg-glass {
                background-color: hsla(0, 0%, 100%, 0.9) !important;
                backdrop-filter: saturate(200%) blur(25px);
            }
        </style>

        <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
            <div class="row gx-lg-5 align-items-center mb-5">
                <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                    <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
                        Secretaría de Ejecutiva
                    </h1>
                    <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
                        Indicadores
                    </p>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
                    <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                    <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

                    <div class="card bg-glass">
                        <div class="card-body px-4 py-5 px-md-5">
                            @using (Html.BeginForm("Cambiar", "AppUser", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                <h1>Cambiar contraseña</h1>
                                <div class="row">
                                    <div class="col-md-12 mb-4">
                                        <div class="form-outline">
                                            <input type="hidden" name="correo" value="@ViewBag.Correo" />
                                            <input type="hidden" name="code" value="@ViewBag.code" />

                                            <label for="email">Contraseña</label>
                                            <input type="password" id="contraseña" name="contraseña" class="form-control" required />

                                            <label for="email">Confirmar contraseña</label>
                                            <input type="password" id="confirma" name="confirma" class="form-control" required />
                                        </div>
                                    </div>
                                </div>
                                <!-- Submit button -->
                                <button type="submit" class="btn btn-primary btn-block mb-4">
                                    Actualizar
                                </button>
                                <a href="@Url.Action("Login", "AppUser")" style="text-decoration:none;">
                                    <button type="button" class="btn btn-secondary btn-block mb-4">
                                        Regresar
                                    </button>
                                </a>
                                <div style="color:red;font-weight:bold;">
                                    @ViewBag.msj
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Section: Design Block -->
    <!-- Section: Design Block -->
</body>
</html>